<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.david.lobster_clicker.Game">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/simpsons"
        android:id="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/countDisplay"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/abc_floating_window_z" />

    <Button
        android:layout_width="265dp"
        android:layout_height="200dp"
        android:text="Lobster"
        android:id="@+id/lobster"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignLeft="@+id/imageView" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0 Lobsters"
        android:id="@+id/countDisplay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powerup X2"
        android:id="@+id/powerup1"
        android:layout_above="@+id/home"
        android:layout_marginBottom="28dp"
        android:layout_toLeftOf="@+id/home"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powerup X3"
        android:id="@+id/powerup2"
        android:layout_alignBottom="@+id/powerup1"
        android:layout_toRightOf="@+id/home"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/powerupCost1"
        android:gravity="center"
        android:layout_below="@+id/powerup2"
        android:layout_alignLeft="@+id/lobster"
        android:layout_alignStart="@+id/lobster" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/powerupCost2"
        android:gravity="center"
        android:layout_alignTop="@+id/powerupCost1"
        android:layout_alignRight="@+id/lobster"
        android:layout_alignEnd="@+id/lobster" />


</RelativeLayout>
